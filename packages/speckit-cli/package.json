{
  "name": "@speckit/cli",
  "version": "0.0.1",
  "type": "module",
  "bin": {
    "speckit": "dist/cli.js",
    "spec": "dist/cli.js"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs",
      "default": "./dist/cli.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup src/cli.ts src/index.ts --format esm,cjs --dts --clean --target node18",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "boxen": "^8.0.1",
    "cfonts": "^3.3.0",
    "clipanion": "^4.0.0-rc.4",
    "zod": "^3.23.8",
    "fs-extra": "^11.2.0",
    "execa": "^9.3.0",
    "globby": "^14.0.2",
    "string-argv": "^0.3.2",
    "@speckit/core": "workspace:*"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "tsup": "^8.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.2"
  }
}
