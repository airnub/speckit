{
  "name": "speckit",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.12.0",
  "description": "TUI + optional AI assistant for spec-driven development: edit specs, propose patches, review diffs, commit. AI/analytics OFF by default.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter '@speckit/*' --filter '!@speckit/docs-website' build",
    "dev": "pnpm --filter @speckit/cli dev",
    "tui": "pnpm --filter @speckit/tui dev",
    "start": "pnpm --filter @speckit/cli start",
    "test": "pnpm -r test",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "prepare": "husky",
    "postinstall": "pnpm build"
  },
  "keywords": [
    "spec-driven-development",
    "sdd",
    "tui",
    "cli",
    "ai",
    "agent",
    "repl",
    "ink"
  ],
  "engines": {
    "node": ">=24"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.3.0",
    "@types/node": "^24.5.2",
    "husky": "^9.1.6"
  },
  "pnpm": {
    "overrides": {
      "fs-extra": "11.2.0"
    }
  }
}
