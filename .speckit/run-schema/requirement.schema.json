{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SpecKit Requirement",
  "type": "object",
  "required": ["id", "text", "status", "evidence"],
  "properties": {
    "id": { "type": "string" },
    "text": { "type": "string" },
    "source": { "type": "string" },
    "category": { "type": ["string", "null"] },
    "constraints": {
      "type": "array",
      "items": { "type": "string" }
    },
    "status": {
      "type": "string",
      "enum": ["unknown", "satisfied", "violated", "in-progress"]
    },
    "evidence": {
      "type": "array",
      "items": { "type": "string" }
    },
    "notes": { "type": "string" }
  }
}
